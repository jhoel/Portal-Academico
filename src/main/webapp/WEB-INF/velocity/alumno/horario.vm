#parse( "declaraciones.vm" )
<html>
<head>
	#parse( "head.vm" )
</head>

<body>
	<div class="container">

		<div class="master-header">
			#parse( "master-header.vm" )
		</div>

		<div class="master-content">


			<h1>Avance curricular de $alumno.nombre</h1>
			<h2>$alumno.carrera.nombre</h2>
			
			<table class="table table-hover">
				<tr>
					<th>Curso</th>
					<th>DÃ­a</th>
					<th>Aula</th>
					<th>Inicio</th>
					<th>Fin</th>
				</tr>
				#foreach($matricula in $matriculas)
				<tr>
					#foreach($bloque in $matricula.cursoDictado.bloques)
						<td> $matricula.cursoDictado.curso.nombre</td>
						<td> $bloque.getHorario().dia</td>
						<td> $bloque.getAula().nombre</td>
						<td> $bloque.getHorario().hora_inicio</td>
						<td> $bloque.getHorario().hora_fin</td>
					#end
				</tr>
				#end
			</table>


		</div>

		<div class="master-footer">
			#parse( "master-footer.vm" )
		</div>
	</div>

</body>
</html>