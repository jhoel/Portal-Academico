#parse( "declaraciones.vm" )
<html>
<head>
	#parse( "head.vm" )
	<script>
		$(document).ready(function(){
			$("#horario").addClass("active");
		});
	</script>
</head>

<body>
	<div class="container">

		<div class="master-header">
			#parse( "docente/header.vm" )
		</div>

		<div class="master-content">
		
			
			<h1>Horario Semanal de $docente.nombre</h1>
			#if($cursosDictados.empty)
				<div> No hay alumnos registrados</div>
			#else
			<table class="table table-hover">
				<tr>
					<th>Curso</th>
					<th>Dia</th>
					<th>Aula</th>
					<th>Inicio</th>
					<th>Fin</th>
				</tr>
				#foreach($cursoDictado in $cursosDictados)
				<tr>
					#foreach($bloque in $cursoDictado.bloques)
						<td> $cursoDictado.curso.nombre</td>
						<td> $bloque.getHorario().dia</td>
						<td> $bloque.getAula().nombre</td>
						#set( $fo = "$bloque.getHorario().hora_inicio" )
						#set($Integer = 0)
						#set($num = $Integer.parseInt($fo) / 100)
						#set($nun = $Integer.parseInt($fo) % 100)
						#if($nun == 0)
						<td>$num:00</td>
						#else
						<td>$num:$nun </td>
						#end
						#set( $fo = "$bloque.getHorario().hora_fin" )
						#set($Integer = 0)
						#set($num = $Integer.parseInt($fo) / 100)
						#set($nun = $Integer.parseInt($fo) % 100)
						#if($nun == 0)
						<td>$num:00</td>
						#else
						<td>$num:$nun </td>
						#end
					#end
				</tr>
				#end
			</table>
			#end
		</div>

		<div class="master-footer">
			#parse( "master-footer.vm" )
		</div>
	</div>

</body>
</html>
