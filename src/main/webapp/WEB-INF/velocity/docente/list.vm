#parse( "declaraciones.vm" )
<html>
<head>
	#parse( "head.vm" )
</head>

<body>
	<div class="container">

		<div class="master-header">
			#parse( "docente/header.vm" )
		</div>

		<div class="master-content">
			
			#if($docente.empty)
				<div> No hay docentes registrados</div>
				<a href="add.html">Agregar Nuevo</a>
			#else
				<table class="table table-hover">
					<tr>
						<th>Docente</th>
						<th>Cursos</th>
					</tr>
				#foreach($docente in $docentes)
					<tr>
						<td><a href="${docente.id}/details.html">$docente.nombre $docente.apellido</a></td>
						<td><a href="${docente.id}/cursos.html">Ver cursos</a></td>
					</tr>
				#end
				</table>
			#end
			<a href="add.html"><button type="button" class="btn btn-default">Agregar nuevo docente</button></a>


		</div>

		<div class="master-footer">
			#parse( "master-footer.vm" )
		</div>
	</div>

</body>
</html>

