#parse( "declaraciones.vm" )
<html>
<head>
	#parse( "head.vm" )
	<script>
		$(document).ready(function(){
			$("#alumnos").addClass("active");
		});
	</script>
</head>

<body>
	<div class="container">

		<div class="master-header">
			#parse( "admin/header.vm" )
		</div>

		<div class="master-content">
			<a href="add_alumno.html"><button class="btn btn-default" type="button">Nuevo</button></a>
			<br><br>
			#if($alumnos.empty)
				<div> No hay alumnos registrados</div>
			#else
				<table class="table table-hover">
				<tr>
					<th>Alumno</th>
					<th>Cursos</th>
					<th>Horario</th>
					<th>Eliminar</th>
				</tr>
				#foreach($alumno in $alumnos)
					<tr>
						<td><a href="${alumno.id}/edit_alumno.html">$alumno.nombre $alumno.apellido</a></td>
						<td><a href="${alumno.id}/cursos.html">Ver cursos</a></td>
						<td><a href="${alumno.id}/horario.html">Ver horario</a></td>
						<td><a href="$alumno.id/remove_alumno.html" 
							onclick="return confirm('Eliminar a $alumno.nombre $alumno.apellido?');">Eliminar</a></td>
					</tr>
				#end
				</table>
			#end
			
		</div>

		<div class="master-footer">
			#parse( "master-footer.vm" )
		</div>
	</div>

</body>
</html>
