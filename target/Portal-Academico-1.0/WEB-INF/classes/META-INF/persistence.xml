<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="app1">
    <class>is2.domain.Account</class>
 	<class>is2.domain.Persona</class>
  	<class>is2.domain.Admin</class>
    <class>is2.domain.Alumno</class>
    <class>is2.domain.Aula</class>
    <class>is2.domain.CursoDictado</class>
    <class>is2.domain.Curso</class>    
    <class>is2.domain.CursoMalla</class>
    <class>is2.domain.Docente</class>
    <class>is2.domain.domain.Matricula</class>
    <class>is2.domain.domain.Nota</class>
    <class>is2.domain.CategoriaNota</class>
    <class>is2.domain.Carrera</class>
    <class>is2.domain.Malla</class>
    <class>is2.domain.Horario</class>
    <class>is2.domain.Periodo</class>
    <class>is2.domain.Bloque</class>

    <properties>
      <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver" />
      <property name="eclipselink.jdbc.password" value="postgres" />
      <property name="eclipselink.jdbc.user" value="postgres" />
      <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/portal_academico" />
      <property name="eclipselink.ddl-generation" value="create-tables" />
    </properties>
  </persistence-unit>
</persistence>
